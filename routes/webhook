const express = require("express");
const router = express.Router();
const supabase = require("../db");
const crypto = require("crypto");

// تحقق من توقيع webhook إذا رغبت (Optional)

router.post("/lemonsqueezy", express.json(), async (req, res) => {
  try {
    const event = req.body;

    // تأكد من نوع الحدث
    if (event.type === "checkout_session.completed") {
      const email = event.data.attributes.billing_email;

      await supabase
        .from("users")
        .update({
          plan: "monthly",
          plan_status: "active",
          plan_expires_at: new Date(Date.now() + 30 * 24 * 60 * 60 * 1000),
        })
        .eq("email", email);

      console.log("Subscription activated for:", email);
    }

    res.status(200).json({ received: true });
  } catch (error) {
    console.error(error);
    res.status(500).json({ message: "Webhook error" });
  }
});

module.exports = router;